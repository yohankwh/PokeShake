<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/bg_default">

        <FrameLayout
            android:id="@+id/loadingCircleHolder"
            android:animateLayoutChanges="true"
            android:visibility="gone"
            android:alpha="0.9"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                        <com.github.ybq.android.spinkit.SpinKitView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/spin_kit_train"
                            style="@style/SpinKitView.CubeGrid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:SpinKit_Color="@color/white" />
                </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_bottom"
            android:orientation="vertical"
            android:layout_weight="2"
            >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="11">
                                <TextView
                                    android:id="@+id/endTraining"
                                    android:textSize="16dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="End Training"
                                    android:paddingRight="10dp"
                                    android:textAlignment="textEnd">
                                </TextView>
                        </LinearLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:elevation="40dp"
                            android:gravity="center"
                            android:layout_weight="4">

                                <ImageView
                                    android:id="@+id/train_poke_iv"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="@dimen/image_size"
                                    android:layout_height="@dimen/image_size"
                                    android:background="@color/gray"
                                    />

                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="9"
                            android:orientation="vertical">
                                <TextView
                                    android:id="@+id/train_pokename_tv"
                                    android:textAlignment="center"
                                    android:textSize="20dp"
                                    android:padding="5dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Pokemon Name"
                                    android:layout_marginVertical="5dp">
                                </TextView>
                                <TextView
                                    android:id="@+id/train_pokelvl_tv"
                                    android:textAlignment="center"
                                    android:textSize="16dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Level 0">
                                </TextView>

                                <TextView
                                    android:id="@+id/curexp_train_tv"
                                    android:textSize="15dp"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="24">
                                </TextView>
                                <TextView
                                    android:id="@+id/exppool_train_tv"
                                    android:textSize="15dp"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Exp Points: 240">
                                </TextView>
                                

                        </LinearLayout>

                </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="HP"
                                    android:textSize="14dp"
                                    android:padding="5dp"
                                    android:textAlignment="center">
                                </TextView>
                                <TextView
                                    android:id="@+id/hp_train_tv"
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="60"
                                    android:textAlignment="center">
                                </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Atk"
                                    android:textSize="14dp"
                                    android:padding="5dp"
                                    android:textAlignment="center">
                                </TextView>
                                <TextView
                                    android:id="@+id/atk_train_tv"
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="60"
                                    android:textAlignment="center">
                                </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Def"
                                    android:textSize="14dp"
                                    android:padding="5dp"
                                    android:textAlignment="center">
                                </TextView>
                                <TextView
                                    android:id="@+id/def_train_tv"
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="60"
                                    android:textAlignment="center">
                                </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Sp. Atk"
                                    android:textSize="14dp"
                                    android:padding="5dp"
                                    android:textAlignment="center">
                                </TextView>
                                <TextView
                                    android:id="@+id/spatk_train_tv"
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="60"
                                    android:textAlignment="center">
                                </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Sp. Def"
                                    android:textSize="14dp"
                                    android:padding="5dp"
                                    android:textAlignment="center">
                                </TextView>
                                <TextView
                                    android:id="@+id/spdef_train_tv"
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="60"
                                    android:textAlignment="center">
                                </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                                <TextView
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Speed"
                                    android:textSize="14dp"
                                    android:padding="5dp"
                                    android:textAlignment="center">
                                </TextView>
                                <TextView
                                    android:id="@+id/speed_train_tv"
                                    android:textColor="@color/white"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="60"
                                    android:textAlignment="center">
                                </TextView>
                        </LinearLayout>
                </LinearLayout>
        </LinearLayout>

</LinearLayout>